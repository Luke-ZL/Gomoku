<%- include('header') %>
<div class="container">
    <p class="mx-auto mb-2 mt-5 text-center" id="topInfo">You are playing as black.</p>
    <div class="d-flex justify-content-center">
        <table background="assets/board.png" class="block">    
            <% for (let i = 0; i < 15; i++) {%>
                <tr id="<%= i %>">
                <% for (let j = 0; j < 15; j++) {%>
                    <td id="<%= i %>i<%= j %>"></td>
                <% } %>
                </tr>
            <% } %>
        </table>
    </div>
    <div class="d-flex justify-content-center mt-3 mb-5">
        <button type="buttonBlack" class="btn btn-dark mr-3 resetBtn", id="buttonBlack">Play Black</button>
        <button type="button" class="btn btn-info ml-3 resetBtn" id="buttonWhite">Play White</button>
    </div>
</div>
<script src="scripts/singleGame.js"></script>
<%- include('foot') %>